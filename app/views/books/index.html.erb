<% @books.each do |book| %>
<div>
  <p>Face：<%= image_tag 'eriri.png' %></p>
  <p>Title：
  <%= link_to book do %>
    <%= book.title %>
  <% end %>
  </p>
  <p>Opinion：<%= book.opinion %></p>
  <p>ユーザーネーム：<%= book.user.name %></p>
</div>
<% end %>

<h1>New book</h1>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
        <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :opinion %>
    <%= f.submit 'Create Book' %>
  <% end %>